<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_border"
    android:elevation="4dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="0.5dp"
        android:background="@drawable/border"
        android:elevation="2dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nhac_dan_ca_6"
            android:scaleType="fitXY"
            android:adjustViewBounds = "true"
            android:id="@+id/playlist_image"/>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_listen"/>
            <TextView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:text="999 K"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="10sp"
                android:textStyle="bold"
                android:id="@+id/playlist_listener_count"/>
        </LinearLayout>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/play_details"
            android:layout_alignBottom="@+id/playlist_image"
            android:layout_alignRight="@+id/playlist_image"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/playlist_play_details" />

    </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Lạc Trôi"
            android:textColor="@color/big_text"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:maxLines="2"
            android:id="@+id/playlist_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="11sp"
            android:text="Sơn Tùng MTP"
            android:gravity="top"
            android:layout_marginLeft="10dp"
            android:textColor="@color/small_text"
            android:id="@+id/playlist_singer"/>
</LinearLayout>