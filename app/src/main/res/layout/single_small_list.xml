<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:background="@color/layout_white"
    android:weightSum="1">

    <TextView
        android:text="1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/small_list_image"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@color/red"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="243dp"
        android:layout_height="match_parent"
        android:layout_weight="1.03">

        <TextView
            android:text="Lạc Trôi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/small_list_songname"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Sơn Tùng M-TP"
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/small_list_singer"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1" />

            <ImageView
                android:layout_height="10dp"
                app:srcCompat="@drawable/headphone"
                android:id="@+id/imageView2"
                android:layout_width="10dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/small_list_singer"
                android:layout_toEndOf="@+id/small_list_singer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="100k"
                android:gravity="center_vertical"
                android:textSize="8sp"
                android:id="@+id/small_list_hearnumber" />
        </LinearLayout>

        <Button
            android:layout_height="20dp"
            android:id="@+id/button"
            android:padding="10dp"
            android:background="@drawable/three_dots_button"
            android:gravity="center_vertical|center_horizontal|end"
            android:layout_width="20dp"
            android:layout_marginRight="10dp"
            android:elevation="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</LinearLayout>