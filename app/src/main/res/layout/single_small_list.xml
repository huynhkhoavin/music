<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:elevation="4dp"
    android:weightSum="1">

    <TextView
        android:text="01"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_width="60dp"
        android:id="@+id/small_list_tv"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="60dp" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="243dp"
android:layout_marginLeft="5dp"
        android:layout_height="match_parent"
        android:layout_weight="1.03">

        <Button
            android:layout_height="20dp"
            android:id="@+id/button"
            android:padding="10dp"
            android:background="@drawable/three_dots_button"
            android:gravity="center_vertical|center_horizontal|end"
            android:layout_width="20dp"
            android:layout_marginRight="10dp"
            android:elevation="8dp"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Lạc Trôi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/small_list_songname"
            android:layout_marginTop="12dp"
            android:textSize="15dp"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </LinearLayout>

        <TextView
            android:text="Sơn Tùng M-TP"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/small_list_singer"
            android:textSize="10dp"
            android:layout_weight="1"
            android:layout_alignBaseline="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100k"
            android:gravity="center_vertical"
            android:textSize="8dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/small_list_hearnumber"
            android:layout_marginStart="15dp"
            android:layout_alignBaseline="@+id/small_list_singer"
            android:layout_alignBottom="@+id/small_list_singer"
            android:layout_toRightOf="@+id/small_list_singer"
            android:layout_toEndOf="@+id/small_list_singer" />


    </RelativeLayout>

</LinearLayout>