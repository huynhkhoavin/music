<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_background"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:layout_height="200dp">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/lactroi_music">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="01"
                android:textSize="30dp"
                android:layout_width="60dp"
                android:id="@+id/textView"
                android:background="#F55531"
                android:gravity="center"
                android:textColor="@color/layout_white"
                android:layout_height="60dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8000">
                <LinearLayout
                    android:layout_width="246dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    >

                    <TextView

                        android:text="Lạc Trôi"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/layout_white"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/textView3">

                    </TextView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:text="Sơn Tùng M-TP"
                            android:textColor="@color/layout_white"

                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/textView2" />

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@android:drawable/stat_sys_headset"
                            android:id="@+id/imageView2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="30m"
                            android:textColor="@color/layout_white"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:textSize="10dp"
                            android:layout_height="match_parent"
                            android:id="@+id/textView7" />
                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:layout_width="25dp"
                    android:id="@+id/btn_three_dots"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_triangle_list_normal"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/play_details"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView4" />

    </RelativeLayout>
</RelativeLayout>
