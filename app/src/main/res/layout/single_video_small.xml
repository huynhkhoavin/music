<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_video_small"
    android:layout_width="match_parent"
    android:layout_below="@+id/line1"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:elevation="1dp"
    android:background="@drawable/border"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/model_female"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:adjustViewBounds = "true"
            android:id="@+id/video_image_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:text="Chúng ta không thuộc về nhau"
                android:textColor="@color/big_text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/video_name_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Sơn Tùng MTP"
                android:textColor="@color/small_text"
                android:textSize="12sp"
                android:id="@+id/video_singer_small" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="12dp"
                    android:background="@drawable/icon_listen" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="90k"
                    android:layout_marginLeft="5dp"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="@color/small_text"
                    android:id="@+id/video_listener_count_small"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>